<resources>

    <style name="AppTheme" parent="Base.AppTheme" />

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/customWhite</item>

        <item name="ttextStyle">@style/TText</item>
        <item name="tbuttonStyle">@style/TButton</item>
    </style>

    <!-- TText -->
    <style name="Base.TText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TText" parent="Base.TText" />

    <!-- TButton-->
    <style name="Base.TButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:background">@drawable/tbutton_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TButton" parent="Base.TButton" />
</resources>